{
  "name": "bitwave.tv",
  "version": "1.21.11",
  "description": "An open platform live streaming service for creators to freely express themselves.",
  "author": "Dispatch",
  "scripts": {
    "dev": "cross-env NODE_ENV=development nuxt",
    "dev:express": "cross-env NODE_ENV=development nodemon server/index.js --watch server",
    "dev:nuxt": "nuxt",
    "build": "nuxt build",
    "start": "cross-env NODE_ENV=production nuxt start",
    "start:express": "cross-env NODE_ENV=production node server/index.js",
    "start:nuxt": "cross-env NODE_ENV=production nuxt start",
    "generate": "nuxt generate",
    "docker:build": "docker build -t bitwavetv/bitwave:latest .",
    "docker:push": "docker push bitwavetv/bitwave:latest",
    "rollout": "kubectl rollout deployment/bitwave-app -n bitwave-node",
    "rollout:restart": "kubectl rollout deployment/bitwave-app -n bitwave-node",
    "rollout:status": "kubectl rollout status deployment/bitwave-app -n bitwave-node"
  },
  "dependencies": {
    "@bitwave/chat-client": "git+https://github.com/bitwave-tv/chat-client.git#dev",
    "@nuxtjs/axios": "^5.12.0",
    "@nuxtjs/component-cache": "^1.1.5",
    "@nuxtjs/device": "^1.2.7",
    "@nuxtjs/dotenv": "^1.4.1",
    "@nuxtjs/google-analytics": "^2.3.0",
    "@nuxtjs/manifest": "^3.0.0-beta.16",
    "@nuxtjs/pwa": "^3.0.0-beta.20",
    "@nuxtjs/recaptcha": "^0.6.2",
    "@nuxtjs/sentry": "^4.1.3",
    "@nuxtjs/toast": "^3.3.0",
    "@sentry/browser": "^5.19.1",
    "@videojs/http-streaming": "^2.0.0",
    "babel-runtime": "^6.26.0",
    "braintree-web-drop-in": "^1.23.0",
    "chart.js": "^2.9.3",
    "cookie-universal-nuxt": "^2.1.4",
    "cross-env": "^7.0.2",
    "dashjs": "^3.1.1",
    "express": "^4.17.1",
    "firebase": "^7.16.0",
    "jwt-decode": "^2.2.0",
    "marked": "^0.7.0",
    "moment": "^2.27.0",
    "nuxt": "^2.13.3",
    "sass-loader": "^9.0.2",
    "socket.io-client": "^2.3.0",
    "video.js": "^7.9.1",
    "videojs-contrib-dash": "^2.11.0",
    "videojs-contrib-quality-levels": "^2.0.9",
    "videojs-hls-quality-selector": "^1.1.1",
    "vue-chartjs": "^3.5.0",
    "vue-clipboard2": "^0.3.1"
  },
  "devDependencies": {
    "@nuxtjs/style-resources": "^1.0.0",
    "@nuxtjs/vuetify": "^1.11.2",
    "node-sass": "^4.14.1",
    "nodemon": "^2.0.4",
    "stylus": "^0.54.7",
    "stylus-loader": "^3.0.2"
  }
}
